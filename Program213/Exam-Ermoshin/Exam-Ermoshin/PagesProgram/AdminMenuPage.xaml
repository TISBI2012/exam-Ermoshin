<Page x:Class="Exam_Ermoshin.PagesProgram.AdminMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exam_Ermoshin.PagesProgram"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminMenuPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="77*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="1">
            <Button x:Name="BtnAddSotrudnik"
                    Content="Добавить сотрудника"
                    Click="BtnAddSotrudnik_Click"/>
            <Button x:Name="BtnDeleteSotrudnik"
                    Content="Уволить сотрудника"
                    Click="BtnDeleteSotrudnik_Click"/>
            <Button x:Name="RedaktirovanieSotrudnik"
                    Content="Редактировать сотрудника"
                    Click="RedaktirovanieSotrudnik_Click"/>
        </StackPanel>


                       

    </Grid>
</Page>
